SELECT (SELECT trip_no FROM Trip
ORDER BY trip_no
OFFSET 0 ROWS FETCH FIRST 1 ROWS ONLY),
(SELECT trip_no FROM Trip
ORDER BY trip_no
OFFSET 1 ROWS FETCH FIRST 1 ROWS ONLY), 
(SELECT trip_no FROM Trip
ORDER BY trip_no
OFFSET 2 ROWS FETCH FIRST 1 ROWS ONLY), 
(SELECT trip_no FROM Trip
ORDER BY trip_no DESC
OFFSET 2 ROWS FETCH FIRST 1 ROWS ONLY), 
(SELECT trip_no FROM Trip
ORDER BY trip_no DESC
OFFSET 1 ROWS FETCH FIRST 1 ROWS ONLY), 
(SELECT trip_no FROM Trip
ORDER BY trip_no DESC
OFFSET 0 ROWS FETCH FIRST 1 ROWS ONLY)
