WITH rectable AS (
 SELECT point,
        date AS inc_date,
        date AS try_date,
        CASE WHEN date IN (SELECT date 
                           FROM Outcome_o o 
                           WHERE o.point=i.point)
             THEN 0
             ELSE 1
        END as good
 FROM Income_o i
 UNION ALL
 SELECT r.point, 
        r.inc_date, 
        DATEADD(day,1,r.try_date),
        CASE WHEN DATENAME(dw,DATEADD(day,1,r.try_date))='Sunday' OR
                  DATEADD(day,1,r.try_date) IN (SELECT date 
                                                FROM Outcome_o o
                                                WHERE o.point=r.point)
             THEN 0
             ELSE 1
        END
 FROM rectable r
 WHERE good=0
)

SELECT point, inc_date, try_date
FROM rectable
WHERE good=1
