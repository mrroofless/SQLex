WITH tableA AS (
 SELECT point,
        date AS money_in_date,
        date AS money_out_date,
        CASE WHEN date IN (SELECT date 
                           FROM Outcome_o AS a 
                           WHERE a.point = b.point)
             THEN 0
             ELSE 1
        END as target_day
 FROM Income_o AS b
 UNION ALL
 SELECT c.point, 
        c.money_in_date, 
        DATEADD(day, 1, c.money_out_date),
        CASE WHEN DATENAME(dw, DATEADD(day, 1, c.money_out_date)) = 'Sunday' OR
                  DATEADD(day, 1, c.money_out_date) IN (SELECT date 
                                                FROM Outcome_o AS o
                                                WHERE o.point = c.point)
             THEN 0
             ELSE 1
        END
 FROM tableA AS c
 WHERE target_day = 0
)

SELECT point, money_in_date, money_out_date
FROM tableA
WHERE target_day = 1
